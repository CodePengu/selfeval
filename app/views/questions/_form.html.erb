<%= form_with(model: question, local: true) do |form| %>
  <% if question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= javascript_include_tag('question.js') %>
  
  <div class="actions">
    <%= form.label :qtype, 'Type of question' %>
    <select name="qtype" onchange="if (this.selectedIndex) myFunction();" id="question_qtype">
      <option>T/F</option>
      <option>MCQ</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, size: "100x20", id: :question_content %>
  </div>

  <div id="opt1" class="field">
    <%= form.label :option1, "First option" %>
    <%= form.text_area :option1, size: "20x5", id: :question_option1 %>
  </div>

  <div id="opt2" class="field">
    <%= form.label :option2, "Second option" %>
    <%= form.text_area :option2, size: "20x5", id: :question_option2 %>
  </div>

  <div id="opt3" class="field">
    <%= form.label :option3, "Third option" %>
    <%= form.text_area :option3, size: "20x5", id: :question_option3 %>
  </div>

  <div id="opt4" class="field">
    <%= form.label :option4, "Fourth option" %>
    <%= form.text_area :option4, size: "20x5", id: :question_option4 %>
  </div>
  
  <div class="field">
    <%= form.label :answer %>
    <%= form.text_area :answer, size: "20x5", id: :question_answer %>
  </div>
  
  <div class="field">
    <%= form.label :explanation %>
    <%= form.text_area :explanation, size: "20x5", id: :question_explanation %>
  </div>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>