<h1>New Question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question) do |f| %>
      <%= f.label :content %>
      <%= f.text_area :content, size: "100x20", class: 'form-control' %>

      <%= f.label :option1 %>
      <%= f.text_area :option1, size: "20x5", class: 'form-control' %>

      <%= f.label :option2 %>
      <%= f.text_area :option2, size: "20x5", class: 'form-control' %>

      <%= f.label :option3 %>
      <%= f.text_area :option3, size: "20x5", class: 'form-control' %>

      <%= f.label :option4 %>
      <%= f.text_area :option4, size: "20x5", class: 'form-control' %>

    <% end %>
  </div>
</div>

<%= link_to 'Back', questions_path %>
