
%h1 Take the Test

%table#review
  %thead
    %tr
      - @correctness.each do |id, val|
        - if val == "[true]"
          %th#true= id
        - elsif val == "[false]"
          %th#false= id
        - else
          %th= id

%br

= form_tag test_questions_path, :id => 'test_form', :method => 'get' do
  - @questions.each_with_index do |question, i|
    = "#{question.id}."
    = question.content
    = @correctness[question.id]
    %br
    %select{:name => "answers[#{question.id}]"}
      %option{:value => 'blank', :selected => @answers[question.id] == 'blank'}
      %option{:value => 'option1', :selected => @answers[question.id] == 'option1'}= question.option1
      %option{:value => 'option2', :selected => @answers[question.id] == 'option2'}= question.option2
      %option{:value => 'option3', :selected => @answers[question.id] == 'option3'}= question.option3
      %option{:value => 'option4', :selected => @answers[question.id] == 'option4'}= question.option4
    %br
    %br
  = submit_tag 'Submit All', :id => 'submit_test'
